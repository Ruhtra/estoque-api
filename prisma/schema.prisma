generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator erd {
  provider                  = "prisma-erd-generator"
  theme                     = "dark"
  engineType                = "binary"
  includeRelationFromFields = true
}

enum OperationHistory {
  increase
  decrease
}

model History {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  // price     Float
  operation OperationHistory
  createdAt DateTime

  //n√£o pode ser feito em cascade, ajetiar futuramente
  Stock   Stock  @relation(fields: [stockId], references: [id], onDelete: Cascade)
  stockId String @db.ObjectId

  @@map("histories")
}

model Stock {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  amount Float

  histories History[]

  Product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String  @unique @db.ObjectId

  @@map("stocks")
}

model Product {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  measureType MesureType @relation(fields: [mesureTypeId], references: [id])

  //estoque deve ter relacinoamente de 1:n
  stock        Stock?
  ingredient   Ingredient?
  mesureTypeId String      @db.ObjectId

  @@map("products")
}

model Ingredient {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  quantity Float

  product   Product @relation(fields: [productId], references: [id])
  productId String  @unique @db.ObjectId

  recipe   Recipe @relation(fields: [recipeId], references: [id])
  recipeId String @unique @db.ObjectId

  @@map("ingredients")
}

model Recipe {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  ingredient Ingredient[]

  @@map("recipes")
}

model MesureType {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String    @unique
  Product Product[]

  @@map("mesure_types")
}
